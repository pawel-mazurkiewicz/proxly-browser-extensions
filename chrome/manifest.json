{
  "manifest_version": 3,
  "name": "Proxly Browser Extension",
  "description": "Route web links through Proxly for intelligent browser selection",
  "version": "1.0.0",
  "default_locale": "en",
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Proxly - Smart Link Router"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "shared/constants.js",
        "shared/localization.js", 
        "shared/accessibility.js",
        "shared/settings-manager.js",
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  
  "permissions": [
    "contextMenus",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-ancestors 'none';"
  }
}